{
    "name": "sandbox",
    "version": "0.0.1",
    "type": "module",
    "main": "main.js",
    "scripts": {
        "dev": "tsx --watch ./src/main.ts",
        "start": "tsx ./src/main.ts",
        "fmt": "npx prettier --write ./src/",
        "type-check": "npx tsc --noEmit",
        "lint": "npx eslint --fix ./src/",
        "check": "npm run type-check && npm run lint",
        "build": "npx ncc build --minify --v8-cache --no-source-map-register ./src/main.ts -o ./dist",
        "test": "node --import tsx --test",
        "db:migrate": "node-pg-migrate --envPath=.env up",
        "db:migration": "node-pg-migrate create -j sql"
    },
    "prettier": {
        "singleQuote": false,
        "semi": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "printWidth": 100
    },
    "imports": {
        "#src/*": "./dist/*"
    },
    "devDependencies": {
        "@types/node": "^24.2.0",
        "@types/pg": "^8.15.5",
        "@vercel/ncc": "^0.38.3",
        "eslint": "^9.32.0",
        "node-pg-migrate": "^8.0.3",
        "prettier": "^3.6.2",
        "tsx": "^4.20.3",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.0"
    },
    "dependencies": {
        "@hono/node-server": "^1.19.5",
        "hono": "^4.9.9",
        "pg": "^8.16.3",
        "pino": "^10.0.0",
        "zod": "^4.1.11"
    }
}
